<!DOCTYPE html>
<html>
    <head>
        <title>Profile</title>
        <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.5.8/angular.min.js"></script>
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js"></script>
        <script src="controller/login-controller.js"></script>
        <link rel="stylesheet" href="css/style.css" />
        <link href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
        <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js" integrity="sha384-Tc5IQib027qvyjSMfHjOMaLkfuWVxZxUPnCJA7l2mCWNIpG9mGCD8wGNIcPD7Txa" crossorigin="anonymous"></script>
    </head>
    <body ng-app="login" ng-controller="loginController" ng-init = "getProfileInfo()">
        <div class="container">
            <h2 style="color: grey;">Edit Your Password</h2>
            <a href="/logout" align = "right">Log Out</a>
            <hr>
            <div class="row">
                <!-- left column -->
                <!-- edit form column -->
                <div class="col-md-9 personal-info">
                    <h3>Personal info</h3>
                    <form class="form-horizontal" role="form">
                        <div class="form-group">
                            <label class="col-lg-3 control-label">First name:</label>
                            <div class="col-lg-8">
                                <h4>{{f_name}}</h4>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-lg-3 control-label">Last name:</label>
                            <div class="col-lg-8">
                                <h4>{{l_name}}</h4>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-lg-3 control-label">Email:</label>
                            <div class="col-lg-8">
                                <h4>{{email}}</h4>
                            </div>
                        </div>
                        <h2>Update your Password:</h2>
                        <div class="form-group">
                            <label class="col-md-3 control-label">Old Password:</label>
                            <div class="col-md-8">
                                <input id="my-password" ng-model="old_password" class="form-control input-group-lg" type="password" name="password" placeholder="Old password">
                            </div>
                        </div>
                        <p style="color:red" ng-show="old_password_invalid">Old Password is Incorrect</p>
                        <div class="form-group">
                            <label class="col-md-3 control-label">New Password:</label>
                            <div class="col-md-8">
                                <input class="form-control input-group-lg" ng-model="new_password_1" type="password" name="password" title="Enter password" placeholder="New password">
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-3 control-label">Confirm password:</label>
                            <div class="col-md-8">
                                <input class="form-control input-group-lg" ng-model="new_password_2" type="password" name="password" title="Enter password" placeholder="Confirm password">
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-3 control-label"></label>
                            <div class="col-md-8">
                                <button class="btn btn-primary" ng-click="updatePassword()" >Update Password</button>
                                <span></span>
                            </div>
                        </div>
                        <div id="hideDiv">
                            <div class="alert alert-success" role="alert" ng-show="save_password">
                                You password has been updated.
                            </div>
                            <div class="alert alert-danger" role="alert" ng-show="new_passworrd_1_invalid">
                                New Password must meet requirements.
                            </div>
                            <div class="alert alert-danger" role="alert" ng-show="error_password">
                                Error Saving you password. Try Later!
                            </div>
                            <div class="alert alert-danger" role="alert" ng-show="not_match_password">
                                New Password did not match. Try Again!
                            </div>
                            <div class="alert alert-danger" role="alert"  ng-show="old_password_wrong">
                                Old Password is Incorrect. Try Again!
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
        <hr>
    </body>

</html>